---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href} target="_blank">
		<h2 class="font-medium underline underline-offset-4 mb-1">
			{title}
		</h2>
		<p class="text-slate-400">
			{body}
		</p>
	</a>
</li>